        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left|center_vertical"
        android:background="@color/primary"
        tools:context=".bnt.ScoreBNT">

        <TextView
            android:id="@+id/totalCorrectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="36px"
            android:textColor="@color/white"
            android:text="Total Correct: " />

        <TextView
            android:id="@+id/totalErrorsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="36px"
            android:textColor="@color/white"
            android:text="Total Errors: " />

        <TextView
            android:id="@+id/phoneticErrorsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="36px"
            android:textColor="@color/white"
            android:text="Phonetic Errors: " />

        <TextView
            android:id="@+id/semanticErrorsTextView"
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginStart="36px"
            android:layout_height="wrap_content"
            android:text="Semantic Errors: " />

        <TextView
            android:id="@+id/perseverativeErrorsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="36px"
            android:textColor="@color/white"
            android:text="Perseverative Errors: " />

        <TextView
            android:id="@+id/cueUtilizationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="36px"
            android:textColor="@color/white"
            android:text="Cue Utilization: " />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="36px"
            android:textColor="@color/white"
            android:text="Date: " />

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginStart="150dp"
            android:text="Back"
            android:textColor="@color/primary"
            android:textSize="24dp"/>

</LinearLayout>
