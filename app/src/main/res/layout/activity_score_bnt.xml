<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ScoreBNT">

        <TextView
            android:id="@+id/totalCorrectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Correct: " />

        <TextView
            android:id="@+id/totalErrorsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Errors: " />

        <TextView
            android:id="@+id/phoneticErrorsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phonetic Errors: " />

        <TextView
            android:id="@+id/semanticErrorsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semantic Errors: " />

        <TextView
            android:id="@+id/perseverativeErrorsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perseverative Errors: " />

        <TextView
            android:id="@+id/cueUtilizationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cue Utilization: " />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: " />
    </LinearLayout>
